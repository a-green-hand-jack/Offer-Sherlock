# =============================================================================
# LLM Provider Configuration
# =============================================================================

# Default LLM provider: openai, anthropic, google, qwen
LLM_PROVIDER=openai

# LLM Common Settings
LLM_TEMPERATURE=0.0
LLM_MAX_TOKENS=4096

# -----------------------------------------------------------------------------
# OpenAI Configuration
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4o-mini
# Optional: Custom base URL for proxies or compatible APIs (e.g., Azure, local)
# OPENAI_BASE_URL=https://your-proxy.com/v1

# -----------------------------------------------------------------------------
# Anthropic (Claude) Configuration
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# -----------------------------------------------------------------------------
# Google (Gemini) Configuration
# -----------------------------------------------------------------------------
GOOGLE_API_KEY=your-google-ai-key-here
GOOGLE_MODEL=gemini-1.5-flash

# -----------------------------------------------------------------------------
# Qwen (Alibaba DashScope) Configuration
# Get your key at: https://dashscope.console.aliyun.com/
# -----------------------------------------------------------------------------
DASHSCOPE_API_KEY=sk-your-dashscope-key-here
QWEN_MODEL=qwen-plus

# =============================================================================
# Social Media API Configuration
# =============================================================================

# Apify (for Xiaohongshu backup)
APIFY_API_KEY=your_apify_token_here

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=sqlite:///./data/offers.db

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
